  
{
    "name": "web-waste",
    "version": "1.0",
    "manifest_version": 2,
    "permissions": [
      "tabs",
      "activeTab",
      "storage",
      "downloads",
      "history"
    ],
    "content_scripts": [
        {
            "matches": ["https://www.youtube.com/*"],
            "js":  ["js/youtube.js"]

        },
        {
            "matches": ["<all_urls>"],

        }, 
        {
            "matches": ["https://www.google.com/search?*"],
            "js": ["js/googleSearch.js"]
        }
    ],
    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": {
            "16": "img/logo16.png"
        },
        "default_popup": "popup.html",
        "default_title": "Carbon Centric Browsing"
    }
}
